									"});",
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"codabox-bankconnect-account-id\", jsonData.data[0].id);",
									"pm.environment.set(\"codabox-bankconnect-account-iban\", jsonData.data[0].attributes[\"iban\"]);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
